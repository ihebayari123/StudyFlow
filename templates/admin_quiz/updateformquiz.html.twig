    position: absolute;
    width: 20px;
    height: 20px;
    top: 50%;
    left: 50%;
    margin-left: -10px;
    margin-top: -10px;
    border: 2px solid rgba(255,255,255,0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}
</style>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Bootstrap JS (pour l'accordéon) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Select2 pour les selects améliorés (optionnel) -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('quizForm');
    const inputs = form.querySelectorAll('input, select, textarea');
    const progressBar = document.getElementById('formProgress');
    const progressPercentage = document.getElementById('progressPercentage');
    const progressText = document.getElementById('progressText');
    const submitBtn = document.getElementById('submitBtn');
    
    // Éléments du résumé
    const summaryTitle = document.getElementById('summaryTitle');
    const summaryDuration = document.getElementById('summaryDuration');
    const summaryDescription = document.getElementById('summaryDescription');
    
    // Initialisation de Select2 pour le champ course
    if (typeof $ !== 'undefined') {
        $('[data-control="select2"]').select2({
            theme: 'bootstrap-5',
            width: '100%',
            placeholder: 'Sélectionner un cours',
            allowClear: true
        });
    }

    // Calcul de la progression
    function updateProgress() {
        let filled = 0;
        let total = 0;
        
        inputs.forEach(input => {
            if (input.type !== 'hidden' && input.name !== '_token') {
                total++;
                if (input.value.trim() !== '') {
                    filled++;
                }
            }
        });
        
        const percentage = Math.round((filled / total) * 100);
        progressBar.style.width = percentage + '%';
        progressPercentage.textContent = percentage + '%';
        
        if (percentage === 0) {
            progressText.textContent = 'Commencez à remplir le formulaire';
        } else if (percentage === 100) {
            progressText.textContent = 'Formulaire complet ! Prêt à être soumis';
            progressBar.classList.add('bg-success');
        } else {
            progressText.textContent = `${filled}/${total} champs remplis`;
        }
    }
    
    // Mise à jour du résumé
    function updateSummary() {
        const title = document.querySelector('[name="quiz[titre]"]')?.value;
        const duration = document.querySelector('[name="quiz[duree]"]')?.value;
        const description = document.querySelector('[name="quiz[description]"]')?.value;
        const course = document.querySelector('[name="quiz[course]"] option:checked')?.text;
        
        summaryTitle.textContent = title || '—';
        summaryDuration.textContent = duration ? duration + ' minutes' : '—';
        summaryDescription.textContent = description || '—';
        
        if (course) {
            document.getElementById('summaryCourse')?.remove();
            const courseElement = `
                <div class="col-12 mt-2">
                    <div class="d-flex align-items-center">
                        <div class="summary-icon bg-warning-subtle rounded-circle p-2 me-2">
                            <i class="fas fa-book text-warning"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Cours associé</small>
                            <span class="text-secondary">${course}</span>
                        </div>
                    </div>
                </div>
            `;
            document.querySelector('.summary-content .row').insertAdjacentHTML('beforeend', courseElement);
        }
    }
    
    // Validation en temps réel
    function validateField(input) {
        if (input.hasAttribute('required') && input.value.trim() === '') {
            input.classList.add('is-invalid');
            return false;
        } else {
            input.classList.remove('is-invalid');
            return true;
        }
    }
    
    // Écouteurs d'événements
    inputs.forEach(input => {
        if (input.type !== 'hidden') {
            input.addEventListener('input', () => {
                updateProgress();
                updateSummary();
                validateField(input);
            });
            
            input.addEventListener('blur', () => {
                validateField(input);
            });
        }
    });
    
    // Gestion de la soumission
    form.addEventListener('submit', function(e) {
        let isValid = true;
        
        inputs.forEach(input => {
            if (input.type !== 'hidden' && input.name !== '_token') {
                if (!validateField(input)) {
                    isValid = false;
                }
            }
        });
        
        if (!isValid) {
            e.preventDefault();
            
            // Scroll vers le premier champ invalide
            const firstInvalid = document.querySelector('.is-invalid');
            if (firstInvalid) {
                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
            
            
        } else {
            submitBtn.classList.add('btn-loading');
            submitBtn.disabled = true;
            showNotification('Création du quiz en cours...', 'success');
        }
    });
    
    // Système de notification
    function showNotification(message, type = 'success') {
        const notification = document.createElement('div');
        notification.className = `position-fixed top-0 end-0 m-3 p-3 rounded-3 shadow-lg`;
        notification.style.backgroundColor = type === 'success' ? '#48bb78' : '#f56565';
        notification.style.color = 'white';
        notification.style.zIndex = '9999';
        notification.style.animation = 'slideInRight 0.3s ease';
        notification.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                <span>${message}</span>
            </div>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.style.animation = 'slideOutRight 0.3s ease';
            setTimeout(() => {
                notification.remove();
            }, 300);
        }, 3000);
    }
    
    // Animation slideInRight
    const style = document.createElement('style');
    style.textContent = `
        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        
        @keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);
    
    // Raccourcis clavier
    document.addEventListener('keydown', function(e) {
        // Ctrl + S pour sauvegarder
        if (e.ctrlKey && e.key === 's') {
            e.preventDefault();
            form.submit();
        }
        
        // Escape pour annuler
        if (e.key === 'Escape') {
            if (confirm('Voulez-vous vraiment annuler la création du quiz ?')) {
                window.location.href = '{{ path('admin_show_quiz') }}';
            }
        }
    });
    
    // Initialisation
    updateProgress();
    updateSummary();
    
    // Sauvegarde automatique dans le localStorage
    function autoSave() {
        const formData = {};
        inputs.forEach(input => {
            if (input.type !== 'hidden' && input.name !== '_token') {
                formData[input.name] = input.value;
            }
        });
        localStorage.setItem('quizDraft', JSON.stringify(formData));
    }
    
    // Restaurer depuis le localStorage
    function restoreDraft() {
        const draft = localStorage.getItem('quizDraft');
        if (draft) {
            const formData = JSON.parse(draft);
            inputs.forEach(input => {
                if (formData[input.name]) {
                    input.value = formData[input.name];
                }
            });
            updateProgress();
            updateSummary();
        }
    }
    
    // Sauvegarde automatique toutes les 30 secondes
    setInterval(autoSave, 30000);
    
    // Restaurer le brouillon s'il existe
    if (localStorage.getItem('quizDraft')) {
        if (confirm('Un brouillon non sauvegardé a été trouvé. Voulez-vous le restaurer ?')) {
            restoreDraft();
        } else {
            localStorage.removeItem('quizDraft');
        }
    }
});
</script>
