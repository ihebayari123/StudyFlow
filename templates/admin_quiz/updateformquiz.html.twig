        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Styles des champs */
.form-control-lg, .form-select-lg {
    padding: 14px 18px;
    font-size: 1rem;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.form-control-lg:focus, .form-select-lg:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    transform: translateY(-2px);
}

.form-label {
    font-size: 0.95rem;
    margin-bottom: 8px;
    color: #2d3748;
    font-weight: 500;
}

.input-group-text {
    border-radius: 12px;
    padding: 14px 18px;
}

/* Badge requis */
.badge {
    font-weight: 500;
    padding: 5px 8px;
}

/* Carte de résumé */
.summary-card {
    transition: all 0.3s ease;
    border-left: 4px solid #667eea !important;
}

.summary-card:hover {
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transform: translateY(-3px);
}

.summary-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
}



/* Accordéon */
.accordion-item {
    background: transparent;
}

.accordion-button {
    border-radius: 12px !important;
    padding: 15px 20px;
    font-weight: 600;
