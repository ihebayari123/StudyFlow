{# templates/admin_quiz/addformquiz.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block title %}Add Quiz - Admin{% endblock %}

{% block admin_content %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2><i class="fas fa-plus-circle"></i> Add New Quiz</h2>
        </div>

        <div class="card-body">
            {{ form_start(f) }}

            <div class="row">
                {% for field in f %}
                    {% if field.vars.name != 'save' %}
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(field) }}
                                {{ form_widget(field, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                                {{ form_errors(field) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <div class="mt-4">
                {{ form_widget(f.save, {
                    'attr': {
                        'class': 'btn btn-success'
                    }
                }) }}

                <a href="{{ path('admin_show_quiz') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            {{ form_end(f) }}
        </div>
    </div>
</div>

<style>
/* Push content away from sidebar */
.container {
    margin-left: 280px;
    max-width: calc(100% - 320px);
    padding-top: 100px;
}

.card {
    border-radius: 10px;
}

.card-header {
    border-radius: 10px 10px 0 0;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn {
    padding: 10px 25px;
    border-radius: 5px;
}

/* Responsive */
@media (max-width: 768px) {
    .container {
        margin-left: 0;
        max-width: 100%;
    }
}
</style>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}
