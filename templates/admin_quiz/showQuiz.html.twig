{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Quiz - Admin{% endblock %}

{% block admin_content %}
<div class="admin-main-content">
    <div class="container-fluid mt-5">

        <!-- Header -->
        <div class="page-header mb-4">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        <i class="fas fa-question-circle"></i> Manage Quiz
                    </h2>
                    <p class="text-muted">View and manage all quizzes</p>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_addformquiz') }}" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Add New Quiz
                    </a>
                </div>
            </div>
        </div>

        <!-- Search -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text"
                                   name="q"
                                   class="form-control"
                                   placeholder="Search by title..."
                                   value="{{ app.request.get('q') }}">
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quiz Table -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Duration</th>
                            <th>Date</th>
                            <th>Course</th>
                            <th>Questions</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for quiz in listQuiz %}
                            <tr>
                                <td>{{ quiz.id }}</td>
                                <td><strong>{{ quiz.titre }}</strong></td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        {{ quiz.duree }} min
                                    </span>
                                </td>
                                <td>{{ quiz.dateCreation|date('Y-m-d') }}</td>
                                <td>
                                    <span class="badge bg-info">
                                        {{ quiz.course.titre }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_quiz_questions',{id:quiz.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-list"></i> View
                                    </a>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_updateformquiz',{id:quiz.id}) }}"
                                           class="btn btn-sm btn-warning"
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_deletequiz',{id:quiz.id}) }}"
                                           class="btn btn-sm btn-danger"
                                           title="Delete"
                                           onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No quizzes found</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
.admin-main-content {
    margin-left: 280px;
    padding-top: 100px;
}

.page-title {
    font-weight: 700;
    color: #2c3e50;
}

.page-title i {
    color: #667eea;
    margin-right: 10px;
}

.card {
    border-radius: 10px;
    border: none;
}

.table thead th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
}

.table tbody tr:hover {
    background-color: #f0f4ff;
    transform: scale(1.01);
    box-shadow: 0 2px 8px rgba(102,126,234,0.15);
}

.btn-group {
    display: flex;
    gap: 5px;
}

@media (max-width: 768px) {
    .admin-main-content {
        margin-left: 0;
        padding-top: 80px;
    }
}
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}
