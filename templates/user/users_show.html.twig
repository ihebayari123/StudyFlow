{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste des utilisateurs - Admin{% endblock %}

{% block admin_content %}

<div style="padding: 60px; margin-left: 210px; overflow-x: auto;">
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12">
                <!-- Bouton Ajouter -->
                <div class="mb-4 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_useradd') }}" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Ajouter un utilisateur
                    </a>
                </div>

                <!-- Carte de recherche et résultats -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient bg-primary text-white d-flex align-items-center py-3">
                        <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                            <i class="fas fa-users fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Liste des utilisateurs</h5>
                            <small class="text-white-50">Gérez les comptes utilisateurs</small>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- Barre de recherche -->
                        <div class="mb-4">
                            <form method="get" action="{{ path('app_users_show') }}" class="row g-3 align-items-center">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0">
                                            <i class="fas fa-search text-primary"></i>
                                        </span>
                                        <input type="text" name="search" value="{{ searchTerm }}" 
                                               class="form-control border-start-0 ps-0" 
                                               placeholder="Rechercher par nom, prénom ou email...">
                                    </div>
                                </div>
                                <div class="col-md-auto">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-2"></i>Rechercher
                                    </button>
                                </div>
                                <div class="col-md-auto">
                                    <a href="{{ path('app_users_show') }}" class="btn btn-outline-secondary">
                                        <i class="fas fa-redo-alt me-2"></i>Réinitialiser
                                    </a>
                                </div>
                                <!-- Garder les paramètres de tri -->
                                <input type="hidden" name="sort" value="{{ currentSort }}">
                                <input type="hidden" name="order" value="{{ currentOrder }}">
                            </form>
                        </div>

                        <!-- Résumé des résultats -->
                        <div class="mb-3 text-muted">
                            {% if searchTerm %}
                                <i class="fas fa-filter me-2"></i>{{ users|length }} résultat(s) pour "{{ searchTerm }}"
                            {% else %}
                                <i class="fas fa-database me-2"></i>Total : {{ users|length }} utilisateur(s)
                            {% endif %}
                        </div>

                        <!-- Tableau responsive -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'id', 'order': currentSort == 'id' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                ID
                                                {% if currentSort == 'id' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'nom', 'order': currentSort == 'nom' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                Nom
                                                {% if currentSort == 'nom' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'prenom', 'order': currentSort == 'prenom' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                Prénom
                                                {% if currentSort == 'prenom' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'email', 'order': currentSort == 'email' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                Email
                                                {% if currentSort == 'email' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'role', 'order': currentSort == 'role' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                Rôle
                                                {% if currentSort == 'role' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('app_users_show', {'sort': 'statutCompte', 'order': currentSort == 'statutCompte' and currentOrder == 'ASC' ? 'DESC' : 'ASC', 'search': searchTerm}) }}" 
                                               class="text-decoration-none text-dark d-flex align-items-center">
                                                Statut
                                                {% if currentSort == 'statutCompte' %}
                                                    <i class="fas fa-sort-{{ currentOrder == 'ASC' ? 'up' : 'down' }} ms-1"></i>
                                                {% else %}
                                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            {% if user.role == 'ROLE_ADMIN' %}
                                                <span class="badge bg-danger">Admin</span>
                                            {% elseif user.role == 'ROLE_ENSEIGNANT' %}
                                                <span class="badge bg-success">Enseignant</span>
                                            {% else %}
                                                <span class="badge bg-primary">Étudiant</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.statutCompte == 'ACTIF' %}
                                                <span class="badge bg-success">Actif</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ user.statutCompte }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_user_edit', { id: user.id }) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline;" 
                                                      onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-user-slash fa-2x mb-2"></i>
                                            <p>
                                                {% if searchTerm %}
                                                    Aucun utilisateur trouvé pour "{{ searchTerm }}"
                                                {% else %}
                                                    Aucun utilisateur trouvé.
                                                {% endif %}
                                            </p>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-center py-3">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1"></i>Liste des utilisateurs enregistrés
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Style pour le tableau */
    .table th a {
        color: inherit;
        transition: color 0.2s;
    }
    .table th a:hover {
        color: #0d6efd;
    }
    .badge {
        font-size: 0.85rem;
        padding: 0.4rem 0.65rem;
    }
    .btn-group .btn {
        margin: 0 2px;
    }
    .card {
        border-radius: 10px;
        border: 1px solid rgba(0,0,0,0.08);
    }
    .card-header {
        border-radius: 10px 10px 0 0 !important;
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    }
    .input-group-text {
        background-color: #f8f9fa;
    }
</style>
{% endblock %}