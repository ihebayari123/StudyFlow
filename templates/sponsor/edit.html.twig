{# templates/admin/sponsor_edit_admin.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier un sponsor - Admin{% endblock %}

{% block admin_content %}

{# Spacer pour navbar fixe #}
<div style="height: 80px;"></div>

<div class="container py-5 d-flex flex-column align-items-center">

    <h1 class="mb-5 text-primary fw-bold text-center">
        Modifier un sponsor
    </h1>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show rounded-3 shadow-sm w-100" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 700px;">
        <div class="card-body p-5">

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="mb-4">
                {{ form_label(form.nomSponsor, 'Nom du sponsor', {
                    'label_attr': {'class': 'form-label fw-bold text-secondary'}
                }) }}
                {{ form_widget(form.nomSponsor, {
                    'attr': {
                        'class': 'form-control rounded-3 shadow-sm',
                        'placeholder': 'Entrez le nom du sponsor'
                    }
                }) }}
                {{ form_errors(form.nomSponsor) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.type, 'Type de sponsor', {
                    'label_attr': {'class': 'form-label fw-bold text-secondary'}
                }) }}
                {{ form_widget(form.type, {
                    'attr': {'class': 'form-select rounded-3 shadow-sm'}
                }) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.montant, 'Montant (en DT)', {
                    'label_attr': {'class': 'form-label fw-bold text-secondary'}
                }) }}
                {{ form_widget(form.montant, {
                    'attr': {
                        'class': 'form-control rounded-3 shadow-sm',
                        'placeholder': 'Ex: 500'
                    }
                }) }}
                {{ form_errors(form.montant) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.eventTitre, 'Événement associé', {
                    'label_attr': {'class': 'form-label fw-bold text-secondary'}
                }) }}
                {{ form_widget(form.eventTitre, {
                    'attr': {'class': 'form-select rounded-3 shadow-sm'}
                }) }}
                {{ form_errors(form.eventTitre) }}
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">

                <button type="submit"
                        class="btn btn-success btn-lg rounded-3 shadow-sm"
                        style="min-width: 140px; transition: transform 0.2s;"
                        onmouseover="this.style.transform='scale(1.05)'"
                        onmouseout="this.style.transform='scale(1)'">
                    Enregistrer
                </button>

                <a href="{{ path('sponsor_index') }}"
                   class="btn btn-outline-secondary btn-lg rounded-3 shadow-sm"
                   style="min-width: 140px; transition: transform 0.2s;"
                   onmouseover="this.style.transform='scale(1.05)'"
                   onmouseout="this.style.transform='scale(1)'">
                    Retour à la liste
                </a>

            </div>

            {{ form_end(form) }}

        </div>
    </div>

</div>
{% endblock %}
