{% extends 'base.html.twig' %}

{% block title %}Recherche par Date{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient bg-info text-white d-flex align-items-center py-3">
                    <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                        <i class="fas fa-search fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Recherche de Sondages</h5>
                        <small class="text-white-50">Rechercher par date</small>
                    </div>
                </div>
                <div class="card-body p-4">
                    {# Formulaire de recherche #}
                    <form method="get" action="{{ path('app_showstresse_recherche') }}" class="mb-4">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-6">
                                <label for="date" class="form-label fw-semibold text-info">
                                    <i class="fas fa-calendar-alt me-2"></i>Date du sondage
                                </label>
                                <input type="date" 
                                       id="date" 
                                       name="date" 
                                       class="form-control form-control-lg" 
                                       value="{{ date }}"
                                       required>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-info btn-lg w-100 text-white">
                                    <i class="fas fa-search me-2"></i>Rechercher
                                </button>
                            </div>
                            <div class="col-md-3">
                                <a href="{{ path('app_showstresse') }}" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                                </a>
                            </div>
                        </div>
                    </form>

                    <hr class="my-4">

                    {# Résultats de la recherche #}
                    {% if date %}
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">
                                <i class="fas fa-list me-2 text-info"></i>Résultats pour le {{ date|date('d/m/Y') }}
                            </h6>
                            <span class="badge bg-info">{{ results|length }} résultat(s)</span>
                        </div>

                        {% if results|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th class="text-center">#ID</th>
                                            <th>Date</th>
                                            <th class="text-center"><i class="fas fa-bed me-1"></i>Sommeil</th>
                                            <th class="text-center"><i class="fas fa-book me-1"></i>Étude</th>
                                            <th><i class="fas fa-user me-1"></i>Utilisateur</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in results %}
                                            <tr>
                                                <td class="text-center fw-bold">{{ item.id }}</td>
                                                <td>{{ item.date|date('d/m/Y') }}</td>
                                                <td class="text-center">
                                                    <span class="badge bg-info">{{ item.sleepHours }}h</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-warning text-dark">{{ item.studyHours }}h</span>
                                                </td>
                                                <td>
                                                    {% if item.user %}
                                                        <span class="text-muted">#{{ item.user.id }}</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">Non assigné</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <a href="{{ path('app_updatestresse', {'id': item.id}) }}"
                                                       class="btn btn-sm btn-outline-primary me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('app_delete_user', {'id': item.id }) }}" 
                                                       class="btn btn-sm btn-outline-danger"
                                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette entrée ?');">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="alert alert-warning text-center py-4">
                                <i class="fas fa-exclamation-circle fa-2x mb-2"></i>
                                <p class="mb-0">Aucun sondage trouvé pour cette date.</p>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <p class="mb-0">Veuillez sélectionner une date pour effectuer une recherche.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
