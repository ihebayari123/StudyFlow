{# templates/stresse/statistiques.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage statistiques - Admin{% endblock %}

{% block admin_content %}

 <div style="padding: 60px; margin-left: 210px; overflow-x: auto;">
<div class="container-fluid px-4">
    <!-- En-tête principal avec gradient moderne -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-5 pt-4">
        <div>
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="bg-gradient-primary p-3 rounded-4 shadow-sm">
                    <i class="fas fa-chart-line fa-2x text-white"></i>
                </div>
                <div>
                    <h1 class="display-6 fw-bold text-dark mb-2">Statistiques des Niveaux de Stress</h1>
                    <p class="text-muted mb-0">Analyse par nombre d'heures d'étude</p>
                </div>
            </div>
        </div>
        
        <!-- Bouton retour avec effet hover -->
        <a href="{{ path('app_showstresse') }}" 
           class="btn btn-outline-primary d-flex align-items-center gap-2 px-4 py-3 rounded-4 fw-medium shadow-sm border-2 hover-lift">
            <i class="fas fa-arrow-left"></i>
            Retour aux Surveys
        </a>
    </div>

    <!-- Statistiques générales avec design de carte amélioré -->
    <div class="row mb-4 g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden hover-lift-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="fas fa-database fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-dark mb-0">{{ totalSurveys }}</h3>
                            <p class="text-muted mb-0">Total Surveys</p>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"><i class="fas fa-chart-bar me-1"></i>Données collectées</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden hover-lift-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="fas fa-book fa-2x text-info"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-dark mb-0">{{ avgStudyHours }}</h3>
                            <p class="text-muted mb-0">Moy. Heures d'Étude</p>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"><i class="fas fa-clock me-1"></i>Heures quotidiennes moyennes</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden hover-lift-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="fas fa-bed fa-2x text-warning"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-dark mb-0">{{ avgSleepHours }}</h3>
                            <p class="text-muted mb-0">Moy. Heures de Sommeil</p>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"><i class="fas fa-moon me-1"></i>Par nuit en moyenne</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden hover-lift-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="fas fa-heart fa-2x text-success"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-dark mb-0">{{ avgWellBeingScore }}</h3>
                            <p class="text-muted mb-0">Score Bien-être Moy.</p>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"><i class="fas fa-star me-1"></i>Sur une échelle de 100</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphiques avec style amélioré -->
    <div class="row mb-4 g-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold text-dark mb-0">
                            <i class="fas fa-chart-pie text-primary me-2"></i>
                            Répartition par Heures d'Étude
                        </h5>
                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2">
                            <i class="fas fa-users me-1"></i> {{ totalSurveys }} étudiants
                        </span>
                    </div>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="position-relative" style="height: 300px;">
                        <canvas id="studyHoursPieChart"></canvas>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <p class="small text-muted mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            Distribution des étudiants selon leur temps d'étude quotidien
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold text-dark mb-0">
                            <i class="fas fa-chart-bar text-success me-2"></i>
                            Score de Bien-être Moyen par Tranche
                        </h5>
                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">
                            <i class="fas fa-heartbeat me-1"></i> Score moyen: {{ avgWellBeingScore }}
                        </span>
                    </div>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="position-relative" style="height: 300px;">
                        <canvas id="wellBeingBarChart"></canvas>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <p class="small text-muted mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            Impact du temps d'étude sur le bien-être général
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau détaillé avec style moderne -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold text-dark mb-0">
                            <i class="fas fa-table text-info me-2"></i>
                            Détails par Tranche d'Heures d'Étude
                        </h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary rounded-3" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-filter me-1"></i> Filtrer
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light bg-opacity-25">
                                <tr>
                                    <th class="fw-semibold text-uppercase small text-muted ps-4">Tranche d'Heures</th>
                                    <th class="fw-semibold text-uppercase small text-muted text-center">Étudiants</th>
                                    <th class="fw-semibold text-uppercase small text-muted text-center">Pourcentage</th>
                                    <th class="fw-semibold text-uppercase small text-muted text-center">Score Moyen</th>
                                    <th class="fw-semibold text-uppercase small text-muted">Interprétation</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for range, stats in studyHoursStats %}
                                    {% if stats.count > 0 %}
                                        {% set percentage = totalSurveys > 0 ? (stats.count / totalSurveys * 100)|round(1) : 0 %}
                                        <tr class="border-bottom">
                                            <td class="ps-4 py-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-3 me-3">
                                                        <i class="fas fa-clock"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold text-dark">{{ range }} heures</span>
                                                        <br>
                                                        <small class="text-muted">Tranche d'étude</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center py-4">
                                                <div class="d-flex flex-column align-items-center">
                                                    <span class="fw-bold fs-5 text-dark">{{ stats.count }}</span>
                                                    <small class="text-muted">étudiants</small>
                                                </div>
                                            </td>
                                            <td class="text-center py-4">
                                                <div class="d-flex flex-column align-items-center">
                                                    <div class="position-relative w-100" style="max-width: 120px;">
                                                        <div class="progress rounded-pill" style="height: 8px;">
                                                            <div class="progress-bar bg-gradient-primary" 
                                                                 style="width: {{ percentage }}%"></div>
                                                        </div>
                                                    </div>
                                                    <span class="fw-semibold mt-2">{{ percentage }}%</span>
                                                </div>
                                            </td>
                                            <td class="text-center py-4">
                                                {% if stats.avgScore >= 80 %}
                                                    <div class="d-inline-flex align-items-center gap-2 bg-success bg-opacity-10 px-3 py-2 rounded-3">
                                                        <i class="fas fa-arrow-up text-success"></i>
                                                        <span class="fw-bold text-success">{{ stats.avgScore }}</span>
                                                    </div>
                                                {% elseif stats.avgScore >= 60 %}
                                                    <div class="d-inline-flex align-items-center gap-2 bg-warning bg-opacity-10 px-3 py-2 rounded-3">
                                                        <i class="fas fa-minus text-warning"></i>
                                                        <span class="fw-bold text-warning">{{ stats.avgScore }}</span>
                                                    </div>
                                                {% else %}
                                                    <div class="d-inline-flex align-items-center gap-2 bg-danger bg-opacity-10 px-3 py-2 rounded-3">
                                                        <i class="fas fa-arrow-down text-danger"></i>
                                                        <span class="fw-bold text-danger">{{ stats.avgScore }}</span>
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td class="py-4">
                                                {% if stats.avgScore >= 80 %}
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                                                            <i class="fas fa-smile text-success"></i>
                                                        </div>
                                                        <div>
                                                            <span class="fw-medium text-success">Excellent bien-être</span>
                                                            <br>
                                                            <small class="text-muted">Niveau de stress faible</small>
                                                        </div>
                                                    </div>
                                                {% elseif stats.avgScore >= 60 %}
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-warning bg-opacity-10 p-2 rounded-3 me-3">
                                                            <i class="fas fa-meh text-warning"></i>
                                                        </div>
                                                        <div>
                                                            <span class="fw-medium text-warning">Bien-être modéré</span>
                                                            <br>
                                                            <small class="text-muted">Stress modéré</small>
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-danger bg-opacity-10 p-2 rounded-3 me-3">
                                                            <i class="fas fa-frown text-danger"></i>
                                                        </div>
                                                        <div>
                                                            <span class="fw-medium text-danger">Stress élevé</span>
                                                            <br>
                                                            <small class="text-muted">Attention requise</small>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analyse et conclusions avec design amélioré -->
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-gradient-primary bg-opacity-10 border-0 pt-4 px-4">
                    <h5 class="fw-bold text-dark mb-0">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        Analyse et Recommandations
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="card border-0 bg-light rounded-3 h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                                            <i class="fas fa-binoculars text-primary"></i>
                                        </div>
                                        <h6 class="fw-bold text-dark mb-0">Observations clés</h6>
                                    </div>
                                    <div class="list-group list-group-flush">
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-check-circle text-success mt-1 me-3"></i>
                                                <span>Les étudiants étudiant moins de 5 heures ont généralement un meilleur score de bien-être.</span>
                                            </div>
                                        </div>
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-exclamation-triangle text-warning mt-1 me-3"></i>
                                                <span>Plus de 8 heures d'étude quotidienne peut indiquer un niveau de stress élevé.</span>
                                            </div>
                                        </div>
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-info-circle text-info mt-1 me-3"></i>
                                                <span>L'équilibre entre étude et sommeil est crucial pour le bien-être.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card border-0 bg-light rounded-3 h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                                            <i class="fas fa-tasks text-success"></i>
                                        </div>
                                        <h6 class="fw-bold text-dark mb-0">Recommandations</h6>
                                    </div>
                                    <div class="list-group list-group-flush">
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-star text-warning mt-1 me-3"></i>
                                                <span>Encourager des pauses régulières pendant les sessions d'étude.</span>
                                            </div>
                                        </div>
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-star text-warning mt-1 me-3"></i>
                                                <span>Maintenir un minimum de 7 heures de sommeil par nuit.</span>
                                            </div>
                                        </div>
                                        <div class="list-group-item bg-transparent border-0 px-0 py-2">
                                            <div class="d-flex align-items-start">
                                                <i class="fas fa-star text-warning mt-1 me-3"></i>
                                                <span>Utiliser des techniques de gestion du stress (méditation, sport).</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Graphique en camembert - Répartition par heures d'étude
    const pieCtx = document.getElementById('studyHoursPieChart').getContext('2d');
    new Chart(pieCtx, {
        type: 'doughnut',
        data: {
            labels: {{ chartLabels|raw }},
            datasets: [{
                data: {{ chartData|raw }},
                backgroundColor: {{ chartColors|raw }},
                borderWidth: 3,
                borderColor: '#fff',
                hoverOffset: 20
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '65%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        usePointStyle: true,
                        font: { 
                            size: 11,
                            family: "'Segoe UI', sans-serif"
                        },
                        color: '#6c757d'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(33, 37, 41, 0.95)',
                    titleFont: { size: 13 },
                    bodyFont: { size: 13 },
                    padding: 12,
                    cornerRadius: 8,
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.parsed || 0;
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                            return `${label}: ${value} étudiants (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });

    // Graphique en barres - Score de bien-être moyen
    const barCtx = document.getElementById('wellBeingBarChart').getContext('2d');
    new Chart(barCtx, {
        type: 'bar',
        data: {
            labels: {{ chartLabels|raw }},
            datasets: [{
                label: 'Score de Bien-être Moyen',
                data: [
                    {% for range, stats in studyHoursStats %}
                        {% if stats.count > 0 %}
                            {{ stats.avgScore }}{% if not loop.last %},{% endif %}
                        {% endif %}
                    {% endfor %}
                ],
                backgroundColor: {{ chartColors|raw }},
                borderWidth: 0,
                borderRadius: 8,
                borderSkipped: false,
                maxBarThickness: 50
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)',
                        drawBorder: false
                    },
                    ticks: {
                        font: { size: 11 },
                        color: '#6c757d',
                        callback: function(value) {
                            return value + ' pts';
                        }
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 11 },
                        color: '#6c757d'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: 'rgba(33, 37, 41, 0.95)',
                    titleFont: { size: 13 },
                    bodyFont: { size: 13 },
                    padding: 12,
                    cornerRadius: 8,
                    callbacks: {
                        label: function(context) {
                            return `Score moyen: ${context.parsed.y} points`;
                        }
                    }
                }
            }
        }
    });

    // Ajouter des effets CSS pour l'interactivité
    document.addEventListener('DOMContentLoaded', function() {
        // Effet hover sur les cartes
        const style = document.createElement('style');
        style.textContent = `
            .hover-lift:hover {
                transform: translateY(-5px);
                transition: transform 0.2s ease-in-out;
            }
            .hover-lift-sm:hover {
                transform: translateY(-3px);
                transition: transform 0.2s ease-in-out;
            }
            .bg-gradient-primary {
                background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            }
            .progress-bar.bg-gradient-primary {
                background: linear-gradient(90deg, #4e73df 0%, #224abe 100%);
            }
        `;
        document.head.appendChild(style);
    });
</script>
{% endblock %}