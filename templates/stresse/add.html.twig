{% extends 'base.html.twig' %}

{% block title %}Ajouter Sondage Stress{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient bg-primary text-white d-flex align-items-center py-3">
                    <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                        <i class="fas fa-plus-circle fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Nouveau Sondage Stress</h5>
                        <small class="text-white-50">Créer un nouveau sondage de bien-être</small>
                    </div>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="row g-4">
                            {# Date Field #}
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date'}}) }}
                                    {{ form_label(form.date, 'Date du sondage', {'label_attr': {'class': 'fw-semibold'}}) }}
                                    {{ form_errors(form.date) }}
                                </div>
                            </div>

                            {# User Field #}
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.user, {'attr': {'class': 'form-select', 'placeholder': 'Utilisateur'}}) }}
                                    {{ form_label(form.user, 'Sélectionner un utilisateur', {'label_attr': {'class': 'fw-semibold'}}) }}
                                    {{ form_errors(form.user) }}
                                </div>
                            </div>

                            {# Sleep Hours Field #}
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-primary">
                                    <i class="fas fa-moon me-2"></i>Heures de sommeil
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-info bg-opacity-10 text-info border-info">
                                        <i class="fas fa-bed"></i>
                                    </span>
                                    {{ form_widget(form.sleepHours, {'attr': {'class': 'form-control', 'placeholder': '0-24'}}) }}
                                    <span class="input-group-text bg-light">h/nuit</span>
                                </div>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>Recommandé : 7-9 heures
                                </div>
                                {{ form_errors(form.sleepHours) }}
                            </div>

                            {# Study Hours Field #}
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-warning">
                                    <i class="fas fa-graduation-cap me-2"></i>Heures d'étude
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-warning bg-opacity-10 text-warning border-warning">
                                        <i class="fas fa-book-open"></i>
                                    </span>
                                    {{ form_widget(form.studyHours, {'attr': {'class': 'form-control', 'placeholder': '0-24'}}) }}
                                    <span class="input-group-text bg-light">h/jour</span>
                                </div>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>Temps consacré aux études
                                </div>
                                {{ form_errors(form.studyHours) }}
                            </div>
                        </div>

                        <hr class="my-4 border-secondary opacity-25">

                        {# Buttons #}
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                            
                            
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i>Enregistrer le sondage
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Les données sont enregistrées de manière sécurisée
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-floating > .form-control:focus,
    .form-floating > .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }
    .card {
        border-radius: 15px;
    }
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    .input-group-lg .form-control {
        font-size: 1.1rem;
    }
</style>
{% endblock %}
