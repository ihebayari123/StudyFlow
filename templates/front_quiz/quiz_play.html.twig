{% extends 'base.html.twig' %}

{% block title %}Quiz – {{ quiz.titre }}{% endblock %}

{% block body %}
{% include 'home/navbar.html.twig' %}


<style>
/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding-top: 110px;
}

/* Navbar */
.header-area {
    background: rgba(0, 0, 0, 0.3) !important;
    backdrop-filter: blur(12px);
    height: 90px;
    box-shadow: 0 6px 25px rgba(0,0,0,0.35);
}

.main-nav .logo h1 {
    color: #ffffff;
    font-size: 28px;
    font-weight: 800;
}

.main-nav .nav li a {
    color: rgba(255,255,255,0.9);
    font-size: 15px;
    font-weight: 500;
    transition: color 0.3s ease;
}

.main-nav .nav li a:hover,
.main-nav .nav li a.active {
    color: #ffd166;
}

/* Quiz Container */
.quiz-container {
    max-width: 900px;
    margin: 60px auto;
    background: rgba(255,255,255,0.95);
    padding: 45px;
    border-radius: 22px;
    box-shadow: 0 20px 50px rgba(0,0,0,0.35);
    backdrop-filter: blur(10px);
}

/* Quiz Header */
.quiz-header {
    text-align: center;
    margin-bottom: 40px;
}

.quiz-header h1 {
    font-size: 2.4rem;
    font-weight: 800;
    color: #4f46e5;
    margin-bottom: 10px;
}

.quiz-header p {
    color: #64748b;
    font-size: 1.05rem;
}

/* Question Box */
.question-box {
    margin-bottom: 40px;
}

.question-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 20px;
}

/* Answers */
.answers label {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #f8fafc;
    border: 2px solid #e5e7eb;
    padding: 15px 18px;
    border-radius: 14px;
    margin-bottom: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.answers label:hover {
    background: #eef2ff;
    border-color: #6366f1;
    transform: translateX(4px);
}

.answers input {
    accent-color: #6366f1;
    transform: scale(1.2);
}

/* Selected Effect */
.answers input:checked + span {
    color: #4f46e5;
    font-weight: 600;
}

/* Submit Button */
.submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    color: #ffffff;
    border: none;
    padding: 16px;
    font-size: 1.1rem;
    font-weight: 700;
    border-radius: 30px;
    cursor: pointer;
    margin-top: 40px;
    transition: all 0.3s ease;
}

.submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(99,102,241,0.5);
}

/* Responsive */
@media (max-width: 768px) {
    .quiz-container {
        padding: 30px 25px;
    }

    .quiz-header h1 {
        font-size: 2rem;
    }

    .question-title {
        font-size: 1.1rem;
    }
}
</style>


<div class="quiz-container">

    <div class="quiz-header">
        <h1>{{ quiz.titre }}</h1>
        <p>Durée : {{ quiz.duree }} minutes</p>
    </div>

    <form method="post" action="{{ path('quiz_submit', {id: quiz.id}) }}">

        {% for question in questions %}
            <div class="question-box">
                <div class="question-title">
                    {{ loop.index }}. {{ question.texte }}
                </div>

                <div class="answers">
                    <label>
                        <input type="radio" name="answers[{{ question.id }}]" value="A">
                        {{ question.choixA }}
                    </label>

                    <label>
                        <input type="radio" name="answers[{{ question.id }}]" value="B">
                        {{ question.choixB }}
                    </label>

                    <label>
                        <input type="radio" name="answers[{{ question.id }}]" value="C">
                        {{ question.choixC }}
                    </label>

                    <label>
                        <input type="radio" name="answers[{{ question.id }}]" value="D">
                        {{ question.choixD }}
                    </label>
                </div>
            </div>
        {% else %}
            <p>Aucune question disponible pour ce quiz.</p>
        {% endfor %}

        <button type="submit" class="submit-btn">
            ✅ Terminer le Quiz
        </button>

    </form>

</div>

{% endblock %}
