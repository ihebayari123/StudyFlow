{% extends 'base.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .search-form {
    margin-bottom: 20px;
    display: flex;
    gap: 10px;
}

.search-form input {
    flex: 1;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
}

.search-form button {
    padding: 8px 12px;
    border: none;
    background-color: #4f46e5;
    color: #fff;
    border-radius: 6px;
    cursor: pointer;
}

    .header {
        text-align: center;
        margin-bottom: 50px;
    }

    .header h1 {
        font-size: 48px;
        color: #fbbd08; 
        margin-bottom: 10px;
    }

    .header p {
        font-size: 20px;
        color: #555;
    }

    .quiz-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
    }

    .quiz-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        padding: 25px;
        transition: transform 0.3s, box-shadow 0.3s;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .quiz-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0,0,0,0.15);
    }

    .quiz-card h2 {
        color: #4a4a4a;
        margin: 0 0 15px 0;
        font-size: 22px;
    }

    .quiz-card p {
        margin: 5px 0;
        color: #777;
        font-size: 16px;
    }

    .quiz-card .actions {
        margin-top: 20px;
    }

    .quiz-card .actions a {
        text-decoration: none;
        padding: 10px 15px;
        margin-right: 10px;
        border-radius: 8px;
        font-size: 14px;
        transition: background 0.3s;
    }

    .quiz-card .actions .edit {
        background: #2185d0;
        color: #fff;
    }

    .quiz-card .actions .edit:hover {
        background: #1678c2;
    }

    .quiz-card .actions .delete {
        background: #db2828;
        color: #fff;
    }

    .quiz-card .actions .delete:hover {
        background: #b71c1c;
    }

    .actions {
    display: flex;
    flex-direction: column; 
    margin-top: 20px;
}









.actions .play-quiz {
    display: block;
    background: #2185d0;
    color: #fff;
    text-align: center;
    padding: 12px;
    border-radius: 8px;
    font-size: 16px;
    text-decoration: none;
    transition: background 0.3s;
}

.actions .play-quiz:hover {
    background: #1678c2;
}

</style>

<div class="container">
    <div class="header">
        <h1>Liste des Quiz</h1>
        <p>Consultez tous vos quiz disponibles</p>
    </div>
    <form method="get" class="search-form">
        <input
            type="text"
            name="q"
            placeholder="Recherche par titre..."
            value="{{ app.request.get('q') }}"
        >
        <button type="submit">üîç</button>
    </form>
    

    <div class="quiz-grid">
        {% for quiz in listQuiz %}
            <div class="quiz-card">
                <h2>{{ quiz.titre }}</h2>
                <p><strong>Dur√©e:</strong> {{ quiz.duree }} min</p>
                <p><strong>Date cr√©ation:</strong> {{ quiz.dateCreation ? quiz.dateCreation|date('Y-m-d') : '‚Äî' }}</p>
                <p><strong>Cours:</strong> {{ quiz.course.titre }}</p>
                <div class="actions">
    
     <div class="actions">
        <a href="{{ path('app_quiz_questions', {id: quiz.id}) }}" class="play-quiz">‚ñ∂Ô∏è Play Quiz</a>
    </div>
</div>

            </div>
        {% else %}
            <p>Aucun quiz trouv√©.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
