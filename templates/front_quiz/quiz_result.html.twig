{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding-top: 140px;
}

/* Header */
.header-area {
    background: rgba(0,0,0,0.3) !important;
    backdrop-filter: blur(12px);
    height: 90px;
    box-shadow: 0 6px 25px rgba(0,0,0,0.35);
    display: flex;
    align-items: center;
}

/* Nav */
.main-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.main-nav .logo h1 {
    font-size: 28px;
    font-weight: 800;
    color: #ffffff;
}

.main-nav .nav {
    list-style: none;
    display: flex;
    gap: 20px;
}

.main-nav .nav li a {
    color: rgba(255,255,255,0.9);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.main-nav .nav li a:hover,
.main-nav .nav li a.active {
    color: #ffd166;
}

/* Result Wrapper */
.result-wrapper {
    max-width: 650px;
    margin: 120px auto;
    padding: 0 20px;
}

/* Result Card */
.result-card {
    background: rgba(255,255,255,0.95);
    border-radius: 24px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: 0 25px 60px rgba(0,0,0,0.35);
    backdrop-filter: blur(10px);
    animation: fadeUp 0.6s ease;
}

/* Anim */
@keyframes fadeUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Titles */
.result-card h1 {
    font-size: 2.2rem;
    font-weight: 800;
    color: #4f46e5;
    margin-bottom: 15px;
}

.result-card h2 {
    font-size: 1.3rem;
    color: #1e293b;
    margin-bottom: 30px;
}

/* Score */
.result-score {
    font-size: 3rem;
    font-weight: 900;
    color: #22c55e;
    margin: 25px 0 40px;
}

/* Button */
.result-card .btn {
    display: inline-block;
    padding: 14px 35px;
    border-radius: 30px;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    color: white;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(99,102,241,0.45);
}

.result-card .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(99,102,241,0.6);
}

/* Responsive */
@media (max-width: 768px) {
    .result-card {
        padding: 35px 25px;
    }

    .result-card h1 {
        font-size: 1.9rem;
    }

    .result-score {
        font-size: 2.4rem;
    }
}
</style>
{% endblock %}



{% block body %}
<!-- ======= Header ======= -->
