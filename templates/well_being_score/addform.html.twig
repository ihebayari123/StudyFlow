{% extends 'base.html.twig' %}

{% block title %}Ajouter Score de Bien-être{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-lg border-0">
                {# Header #}
                <div class="card-header bg-gradient bg-success text-white d-flex align-items-center py-3">
                    <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                        <i class="fas fa-plus-circle fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Nouveau Score de Bien-être</h5>
                        <small class="text-white-50">Créer un nouveau score et ses recommandations</small>
                    </div>
                </div>

                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="row g-4">
                            {# Score Field #}
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.score, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-success bg-opacity-10 text-success border-success">
                                            <i class="fas fa-star"></i>
                                        </span>
                                        {{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
                                        <span class="input-group-text">/100</span>
                                    </div>
                                    <div class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Score entre 0 et 100
                                    </div>
                                    {{ form_errors(form.score) }}
                                </div>
                            </div>

                            {# Survey Field #}
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.survey, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-primary bg-opacity-10 text-primary border-primary">
                                            <i class="fas fa-poll"></i>
                                        </span>
                                        {{ form_widget(form.survey, {'attr': {'class': 'form-select'}}) }}
                                    </div>
                                    {{ form_errors(form.survey) }}
                                </div>
                            </div>

                            {# Recommendation Field #}
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.recommendation, null, {'label_attr': {'class': 'form-label fw-bold text-warning'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-warning bg-opacity-10 text-warning border-warning">
                                            <i class="fas fa-lightbulb"></i>
                                        </span>
                                        {{ form_widget(form.recommendation, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.recommendation) }}
                                </div>
                            </div>

                            {# Action Plan Field #}
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.actionPlan, null, {'label_attr': {'class': 'form-label fw-bold text-info'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-info bg-opacity-10 text-info border-info">
                                            <i class="fas fa-tasks"></i>
                                        </span>
                                        {{ form_widget(form.actionPlan, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.actionPlan) }}
                                </div>
                            </div>

                            {# Comment Field #}
                            <div class="col-12">
                                <div class="form-group">
                                    {{ form_label(form.comment, null, {'label_attr': {'class': 'form-label fw-bold text-secondary'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-secondary bg-opacity-10 text-secondary border-secondary">
                                            <i class="fas fa-comment"></i>
                                        </span>
                                        {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.comment) }}
                                </div>
                            </div>

                            {# Enabled Checkbox #}
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.enabled, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.enabled, null, {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 border-secondary opacity-25">

                        {# Buttons #}
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                            <a href="{{ path('app_showscore') }}" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success btn-lg px-5 shadow-sm'}}) }}
                        </div>

                    {{ form_end(form) }}
                </div>

                {# Footer #}
                <div class="card-footer bg-light text-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Les données sont enregistrées de manière sécurisée
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    .input-group-lg .form-control,
    .input-group-lg .form-select {
        font-size: 1.1rem;
    }
    .form-check-input {
        width: 3em;
        height: 1.5em;
    }
</style>
{% endblock %}
