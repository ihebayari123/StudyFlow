{# templates/well_being_score/showscore.html.twig #}
{% extends 'admin/base_admin.html.twig' %}
{% block title %}Manage showscore - Admin{% endblock %}

{% block admin_content %}
<div style="padding: 60px; margin-left: 210px; overflow-x: auto;">
<div class="container py-5">

    <div class="row justify-content-center">

        <div class="col-lg-8 col-md-10">

            <!-- Header -->
            <div class="mb-4 text-center">
                <h2 class="fw-bold text-primary">
                    ‚úèÔ∏è Modifier le Score
                </h2>
                <p class="text-muted">
                    Mettre √† jour les informations du bien-√™tre
                </p>
            </div>

            <!-- Card -->
            <div class="card shadow-lg border-0">

                <div class="card-body p-4">

                    {{ form_start(form) }}

                    <!-- Score -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Score
                        </label>
                        {{ form_widget(form.score, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Entrer le score'
                            }
                        }) }}
                    </div>

                    <!-- Survey -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Sondage
                        </label>
                        {{ form_widget(form.survey, {
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>

                    <!-- Recommendation -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Recommandation
                        </label>
                        {{ form_widget(form.recommendation, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 3
                            }
                        }) }}
                    </div>

                    <!-- Action Plan -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Plan d'action
                        </label>
                        {{ form_widget(form.actionPlan, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 3
                            }
                        }) }}
                    </div>

                    <!-- Comment -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Commentaire
                        </label>
                        {{ form_widget(form.comment, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 2
                            }
                        }) }}
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">

                        <a href="{{ path('app_showscore') }}"
                           class="btn btn-outline-secondary">
                            ‚¨Ö Retour
                        </a>

                        <button type="submit"
                                class="btn btn-primary px-4">
                            üíæ Enregistrer
                        </button>

                    </div>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>

    </div>

</div>


<!-- STYLE -->
<style>

body {
    background: linear-gradient(135deg,#667eea,#764ba2);
    min-height:100vh;
}

/* Card */
.card{
    border-radius:16px;
    background:#fff;
}

/* Inputs */
.form-control{
    border-radius:10px;
}

/* Focus */
.form-control:focus{
    border-color:#667eea;
    box-shadow:0 0 0 0.2rem rgba(102,126,234,.25);
}

/* Buttons */
.btn-primary{
    background:#667eea;
    border:none;
}

.btn-primary:hover{
    background:#5a6fe0;
}

</style>

{% endblock %}
