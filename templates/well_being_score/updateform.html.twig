{% extends 'base.html.twig' %}

{% block title %}Modifier le Score{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier le Score #{{ wellBeingScore.id }}</h1>
    
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.score, {
                        'label': 'Score',
                        'attr': {
                            'class': 'form-control',
                            'min': 0,
                            'max': 100
                        }
                    }) }}
                </div>
                
                <div class="col-md-6">
                    {{ form_row(form.survey, {
                        'label': 'Sondage associé',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            
            <div class="mb-3">
                {{ form_row(form.recommendation, {
                    'label': 'Recommandation',
                    'attr': {
                        'class': 'form-control',
                        'rows': 3
                    }
                }) }}
            </div>
            
            <div class="mb-3">
                {{ form_row(form.actionPlan, {
                    'label': 'Plan d\'action',
                    'attr': {
                        'class': 'form-control',
                        'rows': 3
                    }
                }) }}
            </div>
            
            <div class="mb-3">
                {{ form_row(form.comment, {
                    'label': 'Commentaire',
                    'attr': {
                        'class': 'form-control',
                        'rows': 2
                    }
                }) }}
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Mettre à jour
                </button>
                <a href="{{ path('app_showscore') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Annuler
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}