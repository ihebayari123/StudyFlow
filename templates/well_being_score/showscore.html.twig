{% extends 'base.html.twig' %}

{% block title %}Liste des Scores de Bien-être{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                {# Header #}
                <div class="card-header bg-gradient bg-success text-white d-flex justify-content-between align-items-center py-3">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                            <i class="fas fa-heart-pulse fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Scores de Bien-être</h5>
                            <small class="text-white-50">Gestion des scores et recommandations</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-light text-success fs-6 px-3 py-2">
                            <i class="fas fa-list-ol me-1"></i>{{ listwellbeingscore|length }} entrées
                        </span>
                        <a href="{{ path('app_showscore_sort_score') }}" class="btn btn-light text-success btn-sm">
                            <i class="fas fa-sort-amount-up me-1"></i> Trier par score
                        </a>
                    </div>
                </div>

                {# Table Content #}
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center" style="width: 60px;">
                                        <i class="fas fa-hashtag me-1"></i>ID
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-lightbulb me-1 text-warning"></i>Recommandation
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-tasks me-1 text-info"></i>Plan d'action
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-comment me-1 text-secondary"></i>Commentaire
                                    </th>
                                    <th scope="col" class="text-center" style="width: 100px;">
                                        <i class="fas fa-star me-1 text-warning"></i>Score
                                    </th>
                                    <th scope="col" class="text-center" style="width: 100px;">
                                        <i class="fas fa-poll me-1 text-primary"></i>Survey
                                    </th>
                                    <th scope="col" class="text-center" style="width: 120px;">
                                        <i class="fas fa-cogs me-1"></i>Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for i in listwellbeingscore %}
                                    <tr>
                                        <td class="text-center fw-bold text-primary">{{ i.id }}</td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;" title="{{ i.recommendation }}">
                                                {{ i.recommendation|default('N/A') }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;" title="{{ i.actionPlan }}">
                                                {{ i.actionPlan|default('N/A') }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 150px;" title="{{ i.comment }}">
                                                {{ i.comment|default('N/A') }}
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            {% set scoreClass = 'bg-secondary' %}
                                            {% if i.score >= 80 %}
                                                {% set scoreClass = 'bg-success' %}
                                            {% elseif i.score >= 60 %}
                                                {% set scoreClass = 'bg-info' %}
                                            {% elseif i.score >= 40 %}
                                                {% set scoreClass = 'bg-warning' %}
                                            {% elseif i.score >= 20 %}
                                                {% set scoreClass = 'bg-danger' %}
                                            {% endif %}
                                            <span class="badge {{ scoreClass }} fs-6 px-3">{{ i.score }}</span>
                                        </td>
                                        <td class="text-center">
                                            {% if i.survey %}
                                                <a href="#" class="badge bg-primary text-decoration-none" title="Survey #{{ i.survey.id }}">
                                                    #{{ i.survey.id }}
                                                </a>
                                            {% else %}
                                                <span class="badge bg-secondary">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_delete_score', {'id': i.id}) }}" 
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce score ?');"
                                                   title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <i class="fas fa-inbox fa-3x mb-3 text-secondary"></i>
                                            <p class="mb-0 fs-5">Aucun score de bien-être disponible</p>
                                            <small class="text-muted">Les données apparaîtront ici une fois ajoutées</small>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Footer #}
                <div class="card-footer bg-light d-flex justify-content-between align-items-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Dernière mise à jour : {{ "now"|date('d/m/Y H:i') }}
                    </small>
                    <div class="d-flex gap-2">
                        <span class="badge bg-success">Excellent (80+)</span>
                        <span class="badge bg-info">Bon (60-79)</span>
                        <span class="badge bg-warning">Moyen (40-59)</span>
                        <span class="badge bg-danger">Faible (<40)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    .table td {
        vertical-align: middle;
    }
    .btn-group .btn {
        border-radius: 6px;
    }
    .badge {
        font-weight: 500;
    }
</style>
{% endblock %}
