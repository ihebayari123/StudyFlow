{% block title %}Ajouter une Question - Administration{% endblock %}

{% block admin_content %}
<div class="admin-main-content">
    <div class="container-fluid py-4">
        
        <!-- Fil d'Ariane -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                
                <li class="breadcrumb-item">
                    <a href="{{ path('app_showquestion') }}" class="text-decoration-none">
                        <i class="fas fa-question-circle me-1"></i>Questions
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Ajouter une question</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Carte principale -->
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <!-- En-tête avec dégradé -->
                    <div class="card-header bg-gradient-primary text-white py-4">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-wrapper me-3">
                                <i class="fas fa-question-circle fa-2x"></i>
                            </div>
                            <div>
                                <h2 class="h3 mb-1 fw-bold">Ajouter une nouvelle question</h2>
                                <p class="mb-0 opacity-75">Créez une question pour enrichir vos quiz</p>
                            </div>
                        </div>
                    </div>

                    <!-- Corps du formulaire -->
                    <div class="card-body p-4 p-lg-5">
                        {{ form_start(f, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'id': 'questionForm'}}) }}

                        <!-- Indicateur de progression -->
                        <div class="form-progress mb-4">
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" id="formProgress" style="width: 0%;" role="progressbar"></div>
                            </div>
                            <small class="text-muted mt-2 d-block" id="progressText">0% complété</small>
                        </div>

                        <div class="row g-4">
                            {% for field in f %}
                                {% if field.vars.name != 'save' %}
                                    {% set fieldName = field.vars.name %}
                                    {% set fieldType = field.vars.block_prefixes[1] ?? '' %}
                                    
                                    <div class="col-md-{% if fieldName in ['texte', 'indice'] %}12{% else %}6{% endif %}">
                                        <div class="form-group mb-3 animate-field">
                                            {{ form_label(field, null, {
                                                'label_attr': {
                                                    'class': 'form-label fw-semibold text-dark'
                                                }
                                            }) }}
                                            
                                            <div class="position-relative">
                                                {{ form_widget(field, {
                                                    'attr': {
                                                        'class': 'form-control form-control-lg border-2 ' ~ (field.vars.errors|length ? 'is-invalid' : ''),
                                                        'placeholder': 'Saisir ' ~ field.vars.label|lower,
                                                        'data-field': fieldName
                                                    }
                                                }) }}
                                                
                                                {% if fieldName == 'texte' %}
                                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </span>
                                                {% elseif fieldName == 'indice' %}
                                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">
                                                        <i class="fas fa-lightbulb"></i>
                                                    </span>
                                                {% endif %}
                                            </div>
                                            
                                            {% if field.vars.errors|length %}
                                                <div class="invalid-feedback d-block">
                                                    {% for error in field.vars.errors %}
                                                        {{ error.message }}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                            
                                            {% if fieldName == 'texte' %}
                                                <small class="text-muted mt-2 d-block">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Saisissez l'énoncé clair et précis de votre question
                                                </small>
                                            {% elseif fieldName == 'indice' %}
                                                <small class="text-muted mt-2 d-block">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Optionnel : un indice pour aider les apprenants
                                                </small>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-3 mt-5 pt-3 border-top">
                            {{ form_widget(f.save, {
                                'attr': {
                                    'class': 'btn btn-success btn-lg px-5 flex-grow-1',
                                    'id': 'submitBtn'
                                },
                                'label': ' Enregistrer la question'
                            }) }}

                            <a href="{{ path('app_showquestion') }}" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                        </div>

                        {{ form_end(f) }}
                    </div>
                </div>

                <!-- Carte d'aide -->
                <div class="card border-0 bg-light mt-4 rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="help-icon me-3">
                                <i class="fas fa-question-circle fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-2">Conseils pour créer une bonne question</h6>
                                <ul class="text-muted small mb-0 ps-3">
                                    <li>Formulez la question de manière claire et précise</li>
                                    <li>Évitez les ambiguïtés et les doubles négations</li>
                                    <li>Proposez des distracteurs pertinents pour les QCM</li>
                                    <li>Ajoutez un indice pour guider les apprenants</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

