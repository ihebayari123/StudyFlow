<!-- Scripts personnalisés -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('questionForm');
    const inputs = form.querySelectorAll('input, select, textarea');
    const progressBar = document.getElementById('formProgress');
    const progressText = document.getElementById('progressText');
    const submitBtn = document.getElementById('submitBtn');
    const livePreview = document.getElementById('livePreview');

    // Calcul de la progression
    function updateProgress() {
        let filled = 0;
        const total = inputs.length;

        inputs.forEach(input => {
            if (input.value.trim() !== '') {
                filled++;
            }
        });

        const percentage = Math.round((filled / total) * 100);
        progressBar.style.width = percentage + '%';
        progressText.textContent = percentage + '% complété';
    }

    // Aperçu en direct
    function updatePreview() {
        const questionText = document.querySelector('[data-field="texte"]')?.value;
        const indice = document.querySelector('[data-field="indice"]')?.value;

        let previewHtml = '<div class="preview-item">';
        
        if (questionText) {
            previewHtml += `
                <div class="mb-3">
                    <span class="badge bg-primary mb-2">Question</span>
                    <p class="fw-bold mb-2">${questionText}</p>
                </div>
            `;
        }

        if (indice) {
            previewHtml += `
                <div class="mb-3">
                    <span class="badge bg-warning text-dark mb-2">Indice</span>
                    <p class="fst-italic text-muted mb-2">
                        <i class="fas fa-lightbulb me-2"></i>${indice}
                    </p>
                </div>
            `;
        }

        if (!questionText && !indice) {
            previewHtml = '<p class="text-muted fst-italic mb-0"><i class="fas fa-arrow-right me-2"></i>Remplissez le formulaire pour voir l\'aperçu</p>';
        }

        previewHtml += '</div>';
        livePreview.innerHTML = previewHtml;
    }

    // Écouteurs d'événements
    inputs.forEach(input => {
        input.addEventListener('input', () => {
            updateProgress();
            updatePreview();
        });
    });

    // Animation de soumission
    form.addEventListener('submit', function(e) {
        submitBtn.classList.add('btn-loading');
        submitBtn.disabled = true;
        
        // Afficher une notification de succès
        showToast('Question en cours d\'enregistrement...', 'success');
    });

    // Gestionnaire de notifications toast
    function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `toast-notification ${type}`;
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-3 fa-lg"></i>
                <div>${message}</div>
            </div>
        `;
        
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.classList.add('show');
        }, 100);
        
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => {
                toast.remove();
            }, 300);
        }, 3000);
    }

    // Validation en temps réel
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.hasAttribute('required') && this.value.trim() === '') {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });
    });

    // Animation des champs au défilement
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    });

    document.querySelectorAll('.animate-field').forEach(field => {
        observer.observe(field);
    });

    // Raccourcis clavier
    document.addEventListener('keydown', function(e) {
        // Ctrl + S pour sauvegarder
        if (e.ctrlKey && e.key === 's') {
            e.preventDefault();
            form.submit();
        }
        
        // Escape pour annuler
        if (e.key === 'Escape') {
            window.location.href = '{{ path('app_showquestion') }}';
        }
    });

    // Initialisation
    updateProgress();
    updatePreview();

    // Auto-resize pour les textareas
    const textareas = form.querySelectorAll('textarea');
    textareas.forEach(textarea => {
        textarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    });
});
</script>
