{% extends 'admin/base_admin.html.twig' %}

{% block title %}Add New Chapter{% endblock %}

{% block admin_content %}
<div class="admin-main-content">
    <div class="container-fluid mt-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_coursesback') }}">
                        <i class="fas fa-book"></i> Courses
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_chapitres', {'courseId': cours.id}) }}">
                        {{ cours.titre }}
                    </a>
                </li>
                <li class="breadcrumb-item active">Add Chapter</li>
            </ol>
        </nav>

        <!-- Form Wrapper -->
        <div class="form-wrapper">
            <div class="form-header">
                <h1><i class="fas fa-plus-circle"></i> Add New Chapter</h1>
                <p>Add a new chapter to <strong>{{ cours.titre }}</strong></p>
            </div>

            <div class="form-container">
                <form method="post" action="{{ path('app_addchapitre', {'courseId': cours.id}) }}" enctype="multipart/form-data">
                    <div class="form-grid">
                        <!-- Basic Info -->
                        <div class="form-group">
                            <label for="titre">
                                <i class="fas fa-heading"></i> Chapter Title
                            </label>
                            <input type="text" 
                                   id="titre" 
                                   name="titre" 
                                   class="form-control" 
                                   placeholder="Enter chapter title"
                                   required>
                        </div>

                        <div class="form-row">
                            <div class="form-group" style="flex: 1;">
                                <label for="ordre">
                                    <i class="fas fa-sort-numeric-up"></i> Order
                                </label>
                                <input type="number" 
                                       id="ordre" 
                                       name="ordre" 
                                       class="form-control" 
                                       placeholder="1, 2, 3..."
                                       min="1"
                                       required>
                            </div>

                            <div class="form-group" style="flex: 1;">
                                <label for="durationMinutes">
                                    <i class="fas fa-clock"></i> Duration (minutes)
                                </label>
                                <input type="number" 
                                       id="durationMinutes" 
                                       name="durationMinutes" 
                                       class="form-control" 
                                       placeholder="30"
                                       min="1">
                            </div>
                        </div>

                        <!-- Content Type Selection -->
                        <div class="form-group">
                            <label for="contentType">
                                <i class="fas fa-layer-group"></i> Content Type
                            </label>
                            <select id="contentType" name="contentType" class="form-control" required>
                                <option value="">Select content type...</option>
                                <option value="text">Text Only</option>
                                <option value="video">Video</option>
                                <option value="file">File/Document</option>
                                <option value="mixed">Mixed (Video + Text + Files)</option>
                            </select>
                        </div>

                        <!-- Text Content -->
                        <div class="form-group">
                            <label for="contenu">
                                <i class="fas fa-file-alt"></i> Content Description
                            </label>
                            <textarea id="contenu" 
                                      name="contenu" 
                                      class="form-control" 
                                      placeholder="Enter chapter content and description"
                                      rows="6"
                                      required></textarea>
                        </div>

                        <!-- Video Section -->
                        <div class="form-group content-section" id="videoSection" style="display: none;">
                            <label for="videoUrl">
                                <i class="fab fa-youtube"></i> Video URL
                            </label>
                            <input type="url" 
                                   id="videoUrl" 
                                   name="videoUrl" 
                                   class="form-control" 
                                   placeholder="https://www.youtube.com/watch?v=... or https://vimeo.com/...">
                            <small class="form-text">Supports YouTube, Vimeo, or direct video links</small>
                        </div>

                        <!-- File Section -->
                        <div class="form-group content-section" id="fileUploadSection" style="display: none;">
    <label for="fileUpload">
        <i class="fas fa-upload"></i> Upload File/Document
    </label>
    <input type="file" 
           id="fileUpload" 
           name="fileUpload" 
           class="form-control" 
           accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.zip">
    <small class="form-text">Accepted formats: PDF, DOC, DOCX, PPT, PPTX, TXT, ZIP (Max: 10MB)</small>
</div>

                        <!-- Image Section -->
                        <div class="form-group">
                            <label for="imageUrl">
                                <i class="fas fa-image"></i> Chapter Thumbnail (Optional)
                            </label>
                            <input type="url" 
                                   id="imageUrl" 
                                   name="imageUrl" 
                                   class="form-control" 
                                   placeholder="https://example.com/image.jpg">
                        </div>

                        <!-- Additional Links -->
                        <div class="form-group">
                            <label>
                                <i class="fas fa-link"></i> Additional Resources (Optional)
                            </label>
                            <div id="linksContainer">
                                <div class="link-item">
                                    <input type="text" 
                                           name="linkTitle[]" 
                                           class="form-control mb-2" 
                                           placeholder="Resource title (e.g., Official Documentation)">
                                    <input type="url" 
                                           name="linkUrl[]" 
                                           class="form-control" 
                                           placeholder="https://example.com">
                                </div>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="addLinkBtn">
                                <i class="fas fa-plus"></i> Add Another Link
                            </button>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Chapter
                        </button>
                        <a href="{{ path('app_chapitres', {'courseId': cours.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

