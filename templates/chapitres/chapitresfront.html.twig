<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchValue = this.value.toLowerCase();
        const chapterCards = document.querySelectorAll('.chapter-card');

        chapterCards.forEach(card => {
            const chapterTitle = card.querySelector('.chapter-title').textContent.toLowerCase();
            const chapterDescription = card.querySelector('.chapter-description').textContent.toLowerCase();
            
            if (chapterTitle.includes(searchValue) || chapterDescription.includes(searchValue)) {
                card.style.display = 'flex';
            } else {
                card.style.display = 'none';
            }
        });
    });

    // Modal Functions
    // Modal Functions
function openChapterModal(chapterId) {
    const chapter = chaptersData[chapterId];
    console.log('Opening chapter:', chapterId);
    console.log('Chapter data:', chapter);
    
    if (!chapter) {
        console.error('Chapter not found!');
        return;
    }

    const modal = document.getElementById('chapterModal');
    const modalTitle = document.getElementById('modalTitle');
    const modalBody = document.getElementById('modalBody');

    modalTitle.textContent = chapter.titre;
    
    let bodyContent = '';

    // Add Video if exists
    if (chapter.videoUrl) {
        console.log('Video URL found:', chapter.videoUrl);
        const videoId = extractVideoId(chapter.videoUrl);
        if (videoId) {
            bodyContent += `
                <div class="content-section">
                    <h3><i class="fas fa-video"></i> Video Lecture</h3>
                    <div class="video-container">
                        ${videoId}
                    </div>
                </div>
            `;
        }
    }

    // Add PDF/File if exists
    console.log('Checking fileName:', chapter.fileName);
    if (chapter.fileName) {
        const fileUrl = `/uploads/chapters/${chapter.fileName}`;
        const fileExt = chapter.fileName.split('.').pop().toLowerCase();
        
        console.log('File URL:', fileUrl);
        console.log('File Extension:', fileExt);
        
        bodyContent += `
            <div class="content-section">
                <h3><i class="fas fa-file-pdf"></i> Course Material</h3>
        `;
        
        // If it's a PDF, show viewer
        if (fileExt === 'pdf') {
            bodyContent += `
                <div class="pdf-container">
                    <iframe src="${fileUrl}"></iframe>
                </div>
            `;
        } else {
            // For other files, just show download button
            bodyContent += `
                <div style="text-align: center; padding: 40px;">
                    <i class="fas fa-file fa-5x" style="color: #667eea; margin-bottom: 20px;"></i>
                    <p style="font-size: 1.2rem; color: #333;"><strong>${chapter.fileName}</strong></p>
                </div>
            `;
        }
        
        bodyContent += `
                <a href="${fileUrl}" download class="view-btn" style="margin-top: 15px;">
                    <i class="fas fa-download"></i> Download File
                </a>
            </div>
        `;
    } else {
        console.log('No fileName found in chapter data');
    }

    // Add Content/Description
    if (chapter.contenu) {
        bodyContent += `
            <div class="content-section">
                <h3><i class="fas fa-book-open"></i> Chapter Content</h3>
                <div class="content-text">${chapter.contenu}</div>
            </div>
        `;
    }

    // Add Resources/Links
    if (chapter.links && chapter.links.length > 0) {
        bodyContent += `
            <div class="content-section">
                <h3><i class="fas fa-link"></i> Additional Resources</h3>
                <ul class="resources-list">
        `;
        chapter.links.forEach(link => {
            bodyContent += `
                <li>
                    <a href="${link.url}" target="_blank" class="resource-link">
                        <i class="fas fa-external-link-alt"></i>
                        <div>
                            <strong>${link.title}</strong><br>
                            <small>${link.url}</small>
                        </div>
                    </a>
                </li>
            `;
        });
        bodyContent += `
                </ul>
            </div>
        `;
    }

    console.log('Final body content:', bodyContent);
    modalBody.innerHTML = bodyContent;
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
}

    function closeChapterModal() {
        const modal = document.getElementById('chapterModal');
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    // Extract video ID and create embed code
    function extractVideoId(url) {
        if (!url) return null;

        // YouTube
        let youtubeMatch = url.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
        if (youtubeMatch) {
            return `<iframe src="https://www.youtube.com/embed/${youtubeMatch[1]}" allowfullscreen></iframe>`;
        }

        // Vimeo
        let vimeoMatch = url.match(/vimeo\.com\/(\d+)/);
        if (vimeoMatch) {
            return `<iframe src="https://player.vimeo.com/video/${vimeoMatch[1]}" allowfullscreen></iframe>`;
        }

        // Direct video link
        if (url.match(/\.(mp4|webm|ogg)$/i)) {
            return `<video controls style="width: 100%; border-radius: 15px;"><source src="${url}"></video>`;
        }

        return null;
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('chapterModal');
        if (event.target == modal) {
            closeChapterModal();
        }
    }

    // Close modal with Escape key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeChapterModal();
        }
    });
</script>
