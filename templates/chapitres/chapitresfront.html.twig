{% extends 'base.html.twig' %}

{% block title %}{{ cours.titre }} - Chapters{% endblock %}

{% block body %}
<!-- ======= Header ======= -->
{% block header %}
{% include 'home/navbar.html.twig' %}
{% endblock %}

<div class="chapters-section">
    <div class="container">
        
        <!-- Course Header -->
        <div class="course-header">
            <a href="{{ path('app_showcourses') }}" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Courses
            </a>
            <h1 class="course-main-title">{{ cours.titre }}</h1>
            <p class="course-description">{{ cours.description }}</p>
            <p class="course-instructor">
                <i class="fas fa-user"></i> {{ cours.user.nom }} {{ cours.user.prenom }}
            </p>
        </div>

        <!-- Search Bar -->
        <div class="search-container">
            <input type="text" id="searchInput" class="search-bar" placeholder="Search chapters by title...">
            <i class="fas fa-search search-icon"></i>
        </div>

        <!-- Chapters Grid -->
        <div class="chapters-grid">
            {% if chapitres is empty %}
                <div class="no-chapters">
                    <i class="fas fa-book-open"></i>
                    <h3>No chapters available yet</h3>
                    <p>This course doesn't have any chapters at the moment.</p>
                </div>
            {% else %}
                {% for chapitre in chapitres|sort((a, b) => a.ordre <=> b.ordre) %}
                <div class="chapter-card" data-chapter-id="{{ chapitre.id }}">
                    <div class="chapter-number">
                        <span>{{ chapitre.ordre }}</span>
                    </div>
                    <div class="chapter-content">
                        {% if chapitre.imageUrl %}
                        <div class="chapter-thumbnail">
                            <img src="{{ chapitre.imageUrl }}" alt="{{ chapitre.titre }}">
                        </div>
                        {% endif %}
                        
                        <h3 class="chapter-title">{{ chapitre.titre }}</h3>
                        
                        <!-- Content Type Badges -->
                        <div class="content-badges">
    {% if chapitre.videoUrl %}
        <span class="badge badge-video"><i class="fas fa-video"></i> Video</span>
    {% endif %}
    {% if chapitre.fileName %}
        <span class="badge badge-file"><i class="fas fa-file-pdf"></i> Document</span>
    {% endif %}
    {% if chapitre.links %}
        <span class="badge badge-link"><i class="fas fa-link"></i> Resources</span>
    {% endif %}
    {% if chapitre.durationMinutes %}
        <span class="badge badge-duration"><i class="fas fa-clock"></i> {{ chapitre.durationMinutes }} min</span>
    {% endif %}
</div>
                        
                        <p class="chapter-description">{{ chapitre.contenu|length > 150 ? chapitre.contenu|slice(0, 150) ~ '...' : chapitre.contenu }}</p>
                        
                        <div class="chapter-footer">
                            <button class="view-btn" onclick="openChapterModal({{ chapitre.id }})">
                                <i class="fas fa-play-circle"></i> Start Chapter
                            </button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>

<!-- Chapter Modal -->
<div id="chapterModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle"></h2>
            <span class="close-modal" onclick="closeChapterModal()">&times;</span>
        </div>
        <div class="modal-body" id="modalBody">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

<!-- Hidden chapter data for JavaScript -->
<script>
    const chaptersData = {
        {% for chapitre in chapitres %}
        {{ chapitre.id }}: {
            titre: {{ chapitre.titre|json_encode|raw }},
            contenu: {{ chapitre.contenu|json_encode|raw }},
            contentType: {{ chapitre.contentType|json_encode|raw }},
            videoUrl: {{ chapitre.videoUrl|json_encode|raw }},
            fileName: {{ chapitre.fileName|json_encode|raw }},
            imageUrl: {{ chapitre.imageUrl|json_encode|raw }},
            links: {{ chapitre.links|json_encode|raw }},
            durationMinutes: {{ chapitre.durationMinutes|json_encode|raw }}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    };
</script>

